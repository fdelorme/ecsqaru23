name: deploy
on:
  push:
    branches:
    - master

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2
    - name: rsync deployments
      uses: burnett01/rsync-deployments@5.1
      with:
        switches: --exclude .git --exclude .gitlab-ci.yml -a
        path: .
        remote_path: /var/www/ecsqaru2023/html
        remote_host: cril.fr
        remote_user: ecsqaru022
        remote_key: ${{ secrets.SSH_PRIVATE }}
